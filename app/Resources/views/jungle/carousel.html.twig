<div id="myCarousel" class="hidden-xs carousel slide " data-ride="carousel">
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            {%- image '@AppBundle/Resources/public/img/fondosjungle1.jpg' -%}
            <img class="first-slide" class="img-responsive" src="{{ asset_url }}" alt="First slide">
            {%- endimage -%}
